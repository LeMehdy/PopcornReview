<!-- admin.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Control Panel</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <!-- Header -->
    <header>
        <%- include("header.ejs"); %> 
    </header>

    <div class="container mt-4">
        <h1>Admin Control Panel</h1>

        <!-- Users Table -->
        <h2>Users</h2>
        <table class="table table-striped">
            <!-- Table Header -->
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <!-- Table Body -->
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td>
                            <form method="post" action="/admin/delete-user/<%= user.id %>">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <!-- Suggestions Section -->
        <h2>Suggestions</h2>
        <div class="row">
            <!-- Display suggestion cards -->
            <% suggests.forEach(suggestion => { %>
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= suggestion.title %></h5>
                            <p class="card-text"><%= suggestion.description %></p>
                            <!-- Add other details here if needed -->
                            <form method="post" action="/admin/delete-suggestion/<%= suggestion.suggestionID %>">
                                <button type="submit" class="btn red-button">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Bootstrap JS (place at the end of body for faster load times) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
